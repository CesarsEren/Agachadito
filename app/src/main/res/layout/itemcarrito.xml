<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/colordivider">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/imgcart"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/panpalta" />

        <LinearLayout
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:textAlignment="center">

            <TextView
                android:id="@+id/nombrecart"
                android:textColor="@color/colorprimarytext"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Pan con Palta"
                android:textAlignment="textStart"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/preciocart"
                android:textColor="@color/colorsecondarytext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ 1.0"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView

                android:paddingTop="15dp"
                android:textColor="@color/colormoney"
                android:id="@+id/subtotalcart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="S / 5.0"
                android:textSize="22dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnmore"
                android:layout_marginEnd="10dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/coloricons"
                android:text="+"
                android:layout_gravity="end"
                android:gravity="center"
                android:textColor="@color/colorsecondarytext"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cantidadcart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginEnd="10dp"
                android:text="5"
                android:textColor="@color/colorprimarytext"
                android:textAlignment="textEnd"
                android:textSize="25dp"
                android:paddingEnd="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnless"
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_width="45dp"
                android:layout_marginEnd="10dp"
                android:layout_height="45dp"
                android:background="@color/coloricons"
                android:text="-"
                android:textColor="@color/colorsecondarytext"
                android:textSize="35dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>