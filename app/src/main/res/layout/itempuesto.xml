<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/backgroundempty"
    android:layout_margin="7dp"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombrepuesto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/coloricons"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:text="JalapeÃ±os FoodTruck"
            android:textColor="@color/colorprimarytext"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/categoriapuesto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/coloricons"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:text="Hamburguesas"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgpuesto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jalapenios" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/coloricons"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/points" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1.5"
                    android:textAlignment="center"
                    android:textColor="@color/colorprimarytext"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/coloricons"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/preciopromedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Precio Promedio : S/ 10"
                android:textColor="@color/colorprimarytext"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/btnverproductos"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Ver Productos"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>