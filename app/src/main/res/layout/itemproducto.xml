<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/backgroundempty"
    android:padding="7dp"
    android:layout_margin="2dp"
    android:background="@color/colorPrimary">
<!--        app:cardBackgroundColor="@color/backgroundempty"-->
   <LinearLayout
       android:padding="5dp"
       android:background="@color/coloricons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:paddingLeft="5dp"
            android:textAlignment="center"
            android:id="@+id/nombreproducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/coloricons"
            android:paddingTop="5dp"
            android:layout_gravity="start"
            android:text="PAN CON PALTA"
            android:textColor="@color/colorprimarytext"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageproducto"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/panpalta"/>
       <View
           android:id="@+id/divider2"
           android:layout_width="match_parent"
           android:layout_height="2dp"
           android:background="?android:attr/listDivider" />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/coloricons"
           android:orientation="vertical">

           <TextView
               android:id="@+id/precioproducto"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/coloricons"
               android:paddingLeft="15dp"
               android:paddingTop="5dp"
               android:textAlignment="center"
               android:paddingBottom="5dp"
               android:text="Precio : S/ 1.0"
               android:textColor="@color/colorprimarytext"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/btnAgregarCarrito"
               android:textAlignment="center"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/design_default_color_primary"
               android:text="Agregar"
               android:padding="5dp"
               android:textStyle="bold"
               android:textColor="@color/coloricons" />
    </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

