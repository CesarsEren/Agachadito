<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VAgregarProductoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:padding="7dp"
            app:cardBackgroundColor="@color/backgroundempty">
            <!--        app:cardBackgroundColor="@color/backgroundempty"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/coloricons"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/Actnombreproducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@color/coloricons"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Nombre de Producto"
                    android:textAlignment="center"
                    android:textColor="@color/colorprimarytext"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/Atcimageproducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/noimage" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/coloricons"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Atcprecioproducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/coloricons"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Precio de Producto"
                        android:textAlignment="center"
                        android:textColor="@color/colorprimarytext"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/design_default_color_primary"
                        android:padding="5dp"
                        android:text="Agregar"
                        android:textAlignment="center"
                        android:textColor="@color/coloricons"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colordivider"></View>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="DATOS DE PRODUCTO"
                    android:textAlignment="center"
                    android:textColor="@color/coloricons"
                    android:textSize="25dp" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="35dp"
                        android:paddingRight="35dp">


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/etNombre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:hint="Nombre Producto" />
                        </android.support.design.widget.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/btnchange"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/imgplus" />

                            <ImageView
                                android:id="@+id/btnchange2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/imgless"
                                android:visibility="gone" />

                            <Spinner
                                android:id="@+id/spcategorias"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:entries="@array/names"
                                android:paddingTop="10dp"
                                android:textAlignment="center"
                                android:paddingBottom="10dp">
                            </Spinner>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/etlCategoria"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="center"
                                android:layout_marginTop="10dp">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/etCategoria"
                                    android:layout_width="match_parent"
                                    android:inputType="text"
                                    android:textAlignment="center"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"
                                    android:hint="Categoria Producto" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/etPrecio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:inputType="numberDecimal"
                                android:hint="Precio" />
                        </android.support.design.widget.TextInputLayout>

                        <Button
                            android:id="@+id/buscarfotoproducto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccent"
                            android:text="Elegir Foto" />

                        <Button
                            android:id="@+id/agregarProducto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/botonredondeado"
                            android:padding="15dp"
                            android:text="Agregar Producto"
                            android:textColor="@color/coloricons" />
                    </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>