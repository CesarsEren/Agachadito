<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UComercioFragment">
    <LinearLayout
        android:background="@color/backgroundempty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="50dp">
        <LinearLayout
            android:background="@color/coloricons"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/lossconection"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"

            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:src="@drawable/lossconection"/>
        <TextView
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error de Conexion"/>
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/coloricons">
            <LinearLayout
                android:id="@+id/LLcategorias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal">
                <!--
                                <TextView
                                    android:layout_margin="2dp"
                                    android:background="@drawable/categoriaredondeada"
                                    android:text="Hamburguesas"
                                    android:textColor="#fff"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="20dp"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"/>-->
            </LinearLayout>
        </HorizontalScrollView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvpuestos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabQr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="70dp"
        android:src="@drawable/qr" />
</FrameLayout>